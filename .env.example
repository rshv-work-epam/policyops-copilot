# Backend
APP_ENV=local
API_PORT=8000
DATABASE_URL=postgresql+psycopg://policyops:policyops@postgres:5432/policyops
AUTH_MODE=mock
MOCK_DEFAULT_ROLE=admin
MOCK_DEFAULT_USER=demo.user
RATE_LIMIT_PER_MINUTE=60
RESTRICTED_CATEGORIES=information_security,access_management

# Retrieval
VECTOR_BACKEND=faiss
FAISS_INDEX_PATH=/app/.faiss/index
POLICY_DATA_PATH=/app/data/sample_policies
TOP_K=4
MIN_CITATION_COVERAGE=0.6

# LLM
LLM_PROVIDER=mock
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Observability
OTEL_SERVICE_NAME=policyops-api
OTEL_EXPORTER_MODE=console
APPLICATIONINSIGHTS_CONNECTION_STRING=

# Frontend
NEXT_PUBLIC_API_BASE=http://localhost:8000
